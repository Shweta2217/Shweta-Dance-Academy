extends base.pug

block style 
    style 
      include ../static/contact.css
      include ../static/style.css

block script
     script 
        include ../static/script.js
block content 
        h1#heading  Log In 
        form(action="/contact", method="post",id="formcontainers",onSubmit = "return checkPassword(this)")
            input(type="text",class="myinput",name="name",placeholder="Enter Your Name", id="myEmail" ) 
            input(type="phone",class="myinput",name="number",placeholder="Enter Your Number") 
            input(type="address",class="myinput",name="address",placeholder="Enter Your Address") 
            input(type="email",class="myinput",name="email",placeholder="Enter Your Email",pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$") 
            input(type="password",class="myinput",id="psw1",name="password1",placeholder="Create Password")
            input(type="password",class="myinput",id="psw2",name="password2",placeholder="ReEnter Password")
            button(class="btn") 
               | Submit     